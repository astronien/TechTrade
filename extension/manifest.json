{
  "manifest_version": 3,
  "name": "Trade-In Session Helper",
  "version": "1.0",
  "description": "ช่วยดึง Session ID จาก eve.techswop.com อัตโนมัติ",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://eve.techswop.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://192.168.1.35:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5000/*", "http://127.0.0.1:5000/*", "http://192.168.1.35:5000/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://eve.techswop.com/*"],
      "js": ["eve-content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
